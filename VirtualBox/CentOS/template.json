{
  "variables": {
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "iso_url": "http://mirrors.kernel.org/centos/7.5.1804/isos/x86_64/CentOS-7-x86_64-NetInstall-1804.iso",
      "iso_checksum": "937bf0a7b0932817f84f7230f15ed88911bbbd85c0c958680792b7f8d8f9c1a9",
      "iso_checksum_type": "sha256",
      "ssh_username": "centos",
      "ssh_password": "centos",
      "ssh_wait_timeout": "10000s",
      "vm_name": "centos",
      "http_directory": "http",
      "boot_wait": "10s",
      "boot_command": [
        "<esc><wait>",
        "linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg",
        "<enter><wait>"
      ],
      "shutdown_command": "echo 'centos' | sudo -S shutdown -P now",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "./scripts/virtualbox.sh",
        "./scripts/zerodisk.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "centos.box"
    }
  ]
}
